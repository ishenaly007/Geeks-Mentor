<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33999999">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/frame"
        android:layout_width="312dp"
        android:layout_height="252dp"
        android:src="@drawable/ic_launcher_background"
        app:riv_corner_radius="@dimen/_30dp"
        android:scaleType="fitXY"
        android:fontFamily="@font/roboto_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btn_close_the_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/multiplication_symbol"
        android:textSize="@dimen/_35sp"
        android:fontFamily="@font/roboto_light"
        android:textColor="#E6FFFFFF"
        app:layout_constraintEnd_toEndOf="@id/frame"
        app:layout_constraintStart_toStartOf="@id/frame"
        app:layout_constraintTop_toTopOf="@id/frame"/>

    <TextView
        android:id="@+id/tv_connection_title"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:text="@string/no_or_bad_connection"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_20dp"
        android:textSize="@dimen/_24sp"
        android:fontFamily="@font/roboto_light"
        android:layout_marginHorizontal="@dimen/_24dp"
        app:layout_constraintEnd_toEndOf="@id/frame"
        app:layout_constraintStart_toStartOf="@id/frame"
        app:layout_constraintTop_toBottomOf="@id/btn_close_the_dialog"/>

    <TextView
        android:id="@+id/tv_connection_description"
        android:layout_width="264dp"
        android:layout_height="40dp"
        android:text="@string/connection_description"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_16dp"
        android:layout_marginHorizontal="@dimen/_24dp"
        android:textSize="@dimen/_14sp"
        android:fontFamily="@font/roboto_light"
        app:layout_constraintEnd_toEndOf="@id/frame"
        app:layout_constraintStart_toStartOf="@id/frame"
        app:layout_constraintTop_toBottomOf="@id/tv_connection_title"/>

    <TextView
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exit"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_54dp"
        android:textSize="@dimen/_14sp"
        android:fontFamily="@font/roboto_light"
        app:layout_constraintEnd_toStartOf="@id/btn_wait"
        app:layout_constraintStart_toStartOf="@id/frame"
        app:layout_constraintTop_toBottomOf="@id/tv_connection_description"/>

    <TextView
        android:id="@+id/btn_wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wait"
        android:textColor="@color/yellow"
        android:layout_marginTop="@dimen/_54dp"
        android:textSize="@dimen/_14sp"
        android:fontFamily="@font/roboto_light"
        app:layout_constraintEnd_toEndOf="@id/frame"
        app:layout_constraintStart_toEndOf="@+id/btn_exit"
        app:layout_constraintTop_toBottomOf="@id/tv_connection_description"/>


</androidx.constraintlayout.widget.ConstraintLayout>