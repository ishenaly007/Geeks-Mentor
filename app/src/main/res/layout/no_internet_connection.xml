<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#66999999">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/body"
        android:layout_width="312dp"
        android:layout_height="252dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:riv_corner_radius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <TextView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close_sign"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/body"
        app:layout_constraintEnd_toEndOf="@id/body"
        android:textSize="30sp"
        android:fontFamily="@font/roboto_light"
        app:layout_constraintStart_toStartOf="@id/body"/>

    <TextView
        android:id="@+id/tv_bad_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bad_connection"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/body"
        app:layout_constraintTop_toBottomOf="@id/btn_close"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="@dimen/_24dp"
        android:textSize="24sp"
        android:fontFamily="@font/roboto_light"
        app:layout_constraintStart_toStartOf="@id/body"/>

    <TextView
        android:id="@+id/tv_bad_connection_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_internet_desc"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/body"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="@dimen/_24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_bad_connection"
        android:textSize="@dimen/_14sp"
        android:fontFamily="@font/roboto_light"
        app:layout_constraintStart_toStartOf="@id/body"/>

    <TextView
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_24dp"
        android:layout_marginTop="@dimen/_54dp"
        android:fontFamily="@font/roboto_light"
        android:text="@string/exit"
        android:layout_marginStart="@dimen/_70dp"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sp"
        app:layout_constraintStart_toStartOf="@id/body"
        app:layout_constraintTop_toBottomOf="@id/tv_bad_connection_desc" />

    <TextView
        android:id="@+id/btn_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_24dp"
        android:layout_marginTop="@dimen/_54dp"
        android:fontFamily="@font/roboto_light"
        android:text="@string/repeat"
        android:textColor="@color/yellow_new"
        android:textSize="@dimen/_14sp"
        android:layout_marginEnd="@dimen/_70dp"
        app:layout_constraintEnd_toEndOf="@+id/body"
        app:layout_constraintTop_toBottomOf="@id/tv_bad_connection_desc" />

</androidx.constraintlayout.widget.ConstraintLayout>